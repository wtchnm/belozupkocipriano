{
	"root": true,
	"extends": ["eslint:recommended"],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"globals": {
		"window": "readonly",
		"document": "readonly",
		"astroHTML": "readonly",
		"HTMLFormElement": "readonly"
	},
	"overrides": [
		{
			"files": ["*.ts"],
			"extends": [
				"plugin:@typescript-eslint/strict-type-checked",
				"plugin:@typescript-eslint/stylistic-type-checked"
			],
			"parserOptions": {
				"project": true
			}
		},
		{
			"files": ["*.astro"],
			"extends": ["plugin:astro/all", "plugin:astro/jsx-a11y-strict"],
			"rules": {
				"astro/no-unused-css-selector": "off", // No vanilla CSS
				"astro/no-unused-define-vars-in-style": "off",
				"astro/semi": "off", // Prettier
				"astro/jsx-a11y/no-noninteractive-tabindex": "off" // Scrollable divs
			}
		},
		{
			"files": ["**/*.astro/*.js", "*.astro/*.js"],
			"extends": [
				"plugin:@typescript-eslint/strict",
				"plugin:@typescript-eslint/stylistic"
			]
		}
	]
}
